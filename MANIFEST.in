# Include documentation files
include README.md
include LICENSE
include CONTRIBUTING.md
include CHANGELOG.md
include CODE_OF_CONDUCT.md

# Include requirements files
include requirements.txt
include requirements-dev.txt

# Include configuration files
include pyproject.toml
include pytest.ini
include .pre-commit-config.yaml

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include examples
recursive-include examples *.py *.md

# Include tests (for source distributions)
recursive-include tests *.py

# Include launcher from scripts
include scripts/__init__.py
include scripts/launcher.py

# Exclude dev/test scripts from distribution
global-exclude scripts/test_*.py
global-exclude scripts/validate_*.py
global-exclude scripts/debug_*.py
global-exclude scripts/workflow_*.py
global-exclude scripts/*.sh

# Include game-specific documentation
recursive-include card_games *.md
recursive-include paper_games *.md
recursive-include dice_games *.md
recursive-include word_games *.md
recursive-include logic_games *.md

# Include sound file documentation (but not the actual sound files)
recursive-include card_games/uno/sounds *.md

# Exclude compiled Python files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
global-exclude *.so

# Exclude development files
exclude .gitignore
exclude .mutmut.toml
prune .git
prune .github
prune build
prune dist
prune *.egg-info
